{
  "name": "vr-player",
  "version": "1.0.2",
  "description": "A VR video player built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --win --mac --linux",
    "dist:all-unpacked": "electron-builder --win --mac --linux --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "vr",
    "video",
    "player",
    "electron",
    "360"
  ],
  "author": {
    "name": "VR Player Team",
    "email": "robin@lqlsoftware.cn"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "three": "^0.158.0",
    "aframe": "^1.4.2",
    "aframe-extras": "^7.0.0"
  },
  "build": {
    "appId": "com.vrplayer.app",
    "productName": "VR Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!src/**/*",
      "!screenshots/**/*",
      "!.git/**/*",
      "!.DS_Store"
    ],
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon-macOS-Default.icns",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "maintainer": "VR Player Team <robin@lqlsoftware.cn>",
      "vendor": "VR Player Team"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "VR Player",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "VR Player",
      "icon": "assets/icon-macOS-Default.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
